<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Admin.Activity.RegisterNewStudent">


    <include
        android:id="@+id/toolbar"
        layout="@layout/custom_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/drawablebtn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_user_fname"
            android:layout_width="185dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/drawableet"
            android:ems="10"
            android:hint="First name"
            android:inputType="text"
            android:textColor="@color/armyGreen"
            android:textColorHint="@color/lightArmyGreen" />

        <EditText
            android:id="@+id/et_user_lname"
            android:layout_width="185dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/drawableet"
            android:ems="10"
            android:hint="Last name"
            android:inputType="text"
            android:textColor="@color/armyGreen"
            android:textColorHint="@color/lightArmyGreen" />

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            >

        <EditText
            android:id="@+id/et_DOB"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/drawableet"
            android:ems="10"
            android:hint="DOB"
            android:inputType="textEmailAddress"
            android:textColor="@color/armyGreen"
            android:textColorHint="@color/lightArmyGreen" />

            <EditText
                android:id="@+id/et_mobileNumber"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/drawableet"
                android:ems="10"
                android:hint="Mobile number"
                android:inputType="number"
                android:textColor="@color/armyGreen"
                android:textColorHint="@color/lightArmyGreen" />

            <EditText
                android:id="@+id/et_secondaryMobileNumber"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/drawableet"
                android:ems="10"
                android:hint="Secondary mobile number"
                android:inputType="number"
                android:textColor="@color/armyGreen"
                android:textColorHint="@color/lightArmyGreen" />

            <EditText
                android:id="@+id/et_address"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:ems="10"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/drawableet"
                android:hint="Address"
                android:gravity="start|top"
                android:paddingStart="10sp"
                android:textColorHint="@color/lightArmyGreen"
                android:paddingTop="5sp"
                android:inputType="textMultiLine"
                android:textColor="@color/armyGreen"
                android:textSize="20sp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:text="Class"
                android:background="@drawable/drawableet"
                android:textAllCaps="false"
                android:textColor="@color/lightArmyGreen"

                />

            <EditText
                android:id="@+id/et_class"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/drawableet"
                android:ems="10"
                android:hint="DOB"
                android:inputType="textEmailAddress"
                android:textColor="@color/armyGreen"
                android:textColorHint="@color/lightArmyGreen" />

        </LinearLayout>


</LinearLayout>
    </ScrollView>
</layout>