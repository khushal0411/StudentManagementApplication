<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Auth.Activity.StudentLogIn">

  <ImageView
      android:layout_width="45dp"
      android:layout_height="9dp"
      android:src="@drawable/scribbletwo"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.218"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.112" />

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:fontFamily="@font/alata"
      android:text="Lets Log You In"
      android:textColor="@color/black"
      android:textSize="24sp"
      android:textStyle="bold"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.138"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.063"

      />

  <EditText
      android:id="@+id/editTextTextEmailAddress"
      android:layout_width="340dp"
      android:layout_height="50dp"
      android:background="@drawable/drawableet"
      android:textColor="@color/armyGreen"
      android:ems="10"
      android:hint="User ID"
      android:inputType="textEmailAddress"
      android:textColorHint="@color/lightArmyGreen"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.492"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.154" />

  <EditText
      android:id="@+id/editTextTextPassword"
      android:layout_width="340dp"
      android:layout_height="50dp"
      android:textColor="@color/armyGreen"
      android:background="@drawable/drawableet"
      android:ems="10"
      android:hint="Password"
      android:inputType="textPassword"
      android:textColorHint="@color/lightArmyGreen"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.492"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.261" />

  <Button
      android:id="@+id/orgbtn"
      android:layout_width="340dp"
      android:layout_height="50dp"
      android:background="@drawable/drawableet"
      android:text="Organization"
      android:textAlignment="textStart"

      android:textAllCaps="false"
      android:textColor="@color/lightArmyGreen"
      android:textSize="17dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.492"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.367" />

  <Button
      android:id="@+id/button2"
      android:layout_width="340dp"
      android:layout_height="50dp"
      android:text="Log In"
      android:textAllCaps="false"
      android:background="@drawable/drawablebtn"
      android:textColor="@color/white"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.498"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.481" />

</androidx.constraintlayout.widget.ConstraintLayout>